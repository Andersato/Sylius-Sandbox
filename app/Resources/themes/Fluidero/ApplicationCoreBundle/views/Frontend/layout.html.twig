<!DOCTYPE html>

<html>
    <head>
        <title>{% block title %}Sylius sandbox frontend.{% endblock %}</title>

        <meta charset="UTF-8">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('assets/css/frontend.css') }}" type="text/css">

        <script type="text/javascript" src="http://code.jquery.com/jquery-1.5.2.min.js"></script>
        <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-dropdown.js"></script>
        <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-modal.js"></script>
    </head>
    <body> 
        <div class="topbar"> 
            <div class="fill"> 
                <div class="container-fluid">
                    <ul class="nav"> 
                        <a class="brand" href="http://sylius.org">Sylius</a>
                        <li><a href="{{ path('app_core_frontend') }}">Index</a></li>
                        <li class="dropdown" data-dropdown="dropdown">
                            <a href="#" class="dropdown-toggle">Assortment</a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('sylius_assortment_product_list') }}">List products</a></li>
                            </ul>
                        </li>
                        <li class="dropdown" data-dropdown="dropdown">
                            <a href="#" class="dropdown-toggle">Blog</a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('sylius_blogger_post_list') }}">List posts</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('sylius_cart_show') }}">My cart</a></li>
                        <li><a href="{{ path('sylius_newsletter_subscriber_subscribe') }}">Newsletter</a></li>
                    </ul>
                    <div class="pull-right">
                        <ul class="nav"> 
                    {% if is_granted('ROLE_SYLIUS_ADMIN') %}
                        <li><a href="{{ path('app_core_security_logout') }}">Logout</a></li>
                        <li><a href="{{ path('app_core_backend') }}">Administration &raquo;</a></li>
                    {% else %}
                        <li><a href="{{ path('app_core_security_login') }}">Login &raquo;</a></li>
                    {% endif %}
                        </ul>
                    </div>
                </div> 
            </div> 
        </div> 
        <div class="container-fluid">
            <div class="sidebar">
            <br />
            <span class="label important">FLUIDERO THEME!</span>
            <h3>My cart.</h3>
        
            <strong>{{ sylius_cart_get().totalItems }}</strong> items, <strong>{{ sylius_cart_get().value }}</strong> &euro;...
            <a href="{{ path('sylius_cart_show') }}" class="btn primary pull-right">My cart &raquo;</a>
            <br /> <br /> <br />
            {% render 'sylius_catalog.controller.frontend.category:listAction' with {'catalogAlias': 'assortment'} %}
            {% render 'sylius_catalog.controller.frontend.category:listAction' with {'catalogAlias': 'blog'} %}
            </div>
            <div class="content"> 
              {% block content %}   {% endblock %}
              
                <footer> 
                    <p>&copy; <a href="http://sylius.org">Sylius</a>, 2011.</p> 
                </footer> 
            </div>  
        </div>
    </body> 
</html>
