{% extends 'ApplicationCoreBundle:Backend:layout.html.twig' %}

{% if app.request.get('order') %}
    {% if app.request.get('order') == 'ASC' %}
        {% set sortOrder = 'DESC' %}
    {% else %}
        {% set sortOrder = 'ASC' %}
    {% endif %}
{% else %}
    {% set sortOrder = 'DESC' %}
{% endif %}

{% block content %}

<div class="page-header"> 
    <h1>Current orders.</h1> 
</div> 

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% if orders %}
<table> 
    <thead>
        <tr>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'id', 'order': sortOrder}) }}">#id</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'value', 'order': sortOrder}) }}">value</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'createdAt', 'order': sortOrder}) }}">creation time</a></th>
            <th><a href="{{ path('sylius_sales_backend_order_list', {'sort': 'status', 'order': sortOrder}) }}">status</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for order in orders %}
    <tr>
        <td>{{ order.id }}</td>
        <td>{{ order.value }} &euro;</td>
        <td>{{ order.createdAt | date('d.m.Y, H:i:s') }}</td>
        <td>
            {% render 'sylius_sales.controller.backend.order:statusAction' with {'id': order.id} %}
        </td>
        <td>
            <a href="{{ path('sylius_sales_backend_order_show', {'id': order.id}) }}" class="btn">details</a>
            <a href="{{ path('sylius_sales_backend_order_delete', {'id': order.id}) }}" class="btn danger">delete</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert-message info">
  <p><strong>Information.</strong> There are no orders to display.</p>
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}
 
{% endblock %}