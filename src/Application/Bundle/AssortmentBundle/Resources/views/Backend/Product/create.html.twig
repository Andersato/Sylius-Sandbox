{% extends 'ApplicationCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header"> 
    <h1>Creating product.<small> Use the form below to create a new product...</small></h1> 
</div> 

<form action="{{ path('sylius_assortment_backend_product_create') }}" method="post">

<fieldset>
    <div class="formErrors">
    {{ form_errors(form.name) }}
    </div>
    <div class="clearfix">
    <label for="form[name]">Name...</label> 
    <div class="input">
        {{ form_widget(form.name, {'attr': {'class': 'span7'}}) }}
    </div>
    </div>
    <div class="formErrors">
    {{ form_errors(form.description) }}
    </div>
    <div class="clearfix">
    <label for="form[description]">Description...</label> 
    <div class="input">
        {{ form_widget(form.description, {'attr': {'class': 'xxlarge', 'rows': 10}}) }}
    </div>
    </div>
    <div class="clearfix">
    <label for="form[category]">Assortment category...</label> 
    <div class="input">
        {{ form_widget(form.category, {'empty_value': "choose category..."}) }}
    </div>
    </div>
</fieldset>
		
{{ form_rest(form) }}
		
<div class="actions">
<input type="submit" value="create product" class="btn primary large" />
</div>

</form>

{% endblock content %}