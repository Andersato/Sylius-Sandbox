{% extends 'ApplicationCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Update newsletter. <small>Use this form to modify existing newsletter.</small></h1>
</div>

<form action="{{ path('sylius_newsletter_backend_newsletter_update', {'id': newsletter.id}) }}" method="post">

<fieldset>
    <div class="formErrors">
        {{ form_errors(form.title) }}
    </div>
    <div class="clearfix">
    <label for="sylius_newsletter_title">Title...</label>
    <div class="input">
        {{ form_widget(form.title, {'attr': {'class': 'span8'}}) }}
    </div>
    </div>
    <div class="formErrors">
        {{ form_errors(form.content) }}
    </div>
    <div class="clearfix">
    <label for="sylius_newsletter_content">Content...</label>
    <div class="input">    
        {{ form_widget(form.content, {'attr': {'class': 'xxlarge', 'rows': 5}}) }}
    </div>
    </div>
</fieldset>

{{ form_rest(form) }}

<div class="actions">
<input type="submit" value="save changes" class="btn primary large" />
</div>

</form>

{% endblock content %}
