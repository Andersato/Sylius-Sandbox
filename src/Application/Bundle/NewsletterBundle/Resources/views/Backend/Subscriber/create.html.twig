{% extends 'ApplicationCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Creating subscriber. <small>Fill the form below to add new subscriber.</small></h1>
</div>

<form action="{{ path('sylius_newsletter_backend_subscriber_create') }}" method="post">

<fieldset>
    <div class="formErrors">
        {{ form_errors(form.email) }}
    </div>
    <div class="clearfix">
    <label for="sylius_newsletter_subscriber[email]">E-mail address...</label>
    <div class="input">
        {{ form_widget(form.email, {'attr': {'class': 'span7'}}) }}
    </div>
    </div>
</fieldset>

{{ form_rest(form) }}

<div class="actions">
<input type="submit" value="create subscriber" class="btn primary large" />
</div>

</form>

{% endblock content %}
