<fieldset>
<div class="row-fluid">
    <hr />
    <div class="span5 well">
    <h3>Delivery address</h3>
    <hr />
    {{ form_row(form.deliveryAddress.firstname, {'attr': {'class': 'input-xlarge'}}) }}
    {{ form_row(form.deliveryAddress.lastname, {'attr': {'class': 'input-xlarge'}}) }}
    {{ form_row(form.deliveryAddress.street, {'attr': {'class': 'input-medium'}}) }}
    {{ form_row(form.deliveryAddress.city, {'attr': {'class': 'input-medium'}}) }}
    {{ form_row(form.deliveryAddress.postcode, {'attr': {'class': 'input-small'}}) }}
    </div>

    <div class="span5 well">
    <h3>Billing address</h3>
    <hr />
    {{ form_row(form.billingAddress.firstname, {'attr': {'class': 'input-xlarge'}}) }}
    {{ form_row(form.billingAddress.lastname, {'attr': {'class': 'input-xlarge'}}) }}
    {{ form_row(form.billingAddress.street, {'attr': {'class': 'input-medium'}}) }}
    {{ form_row(form.billingAddress.city, {'attr': {'class': 'input-medium'}}) }}
    {{ form_row(form.billingAddress.postcode, {'attr': {'class': 'input-small'}}) }}
    </div>
</div>

    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>SKU</th>
                <th>quantity</th>
                <th>product</th>
                <th><span class="pull-right">unit price</span></th>
                <th><span class="pull-right">line total</span></th>
            </tr>
        </thead>
        <tbody id="sylius-sales-order-items" data-prototype="{{ form_row(form.items.vars.prototype)|e }}" class="collection-container">
            {% for itemForm in form.items %}
                {{ form_row(itemForm) }}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <a class="btn btn-success collection-add-btn" data-collection="sylius-sales-order-items">add item</a>
                </td>
                <td>
                    <div class="input-append pull-right">
                    <input type="text" id="sylius-sales-order-total" class="disabled input-small" disabled="disabled" value="0.00"/><span class="add-on">&euro;</span>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</fieldset>
{{ form_widget(form._token) }}
