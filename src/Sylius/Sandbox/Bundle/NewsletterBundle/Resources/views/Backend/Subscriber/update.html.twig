{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Updating subscriber. <small>Use the form below to modify existing subscriber.</small></h1>
</div>

<form action="{{ path('sylius_newsletter_backend_subscriber_update', {'id': subscriber.id}) }}" method="post">

<fieldset>
    <div class="formErrors">
        {{ form_errors(form.email) }}
    </div>
    <div class="clearfix">
    <label for="sylius_newsletter_subscriber[email]">E-mail address...</label>
    <div class="input">
        {{ form_widget(form.email, {'attr': {'class': 'span7'}}) }}
    </div>
    </div>
</fieldset>

{{ form_rest(form) }}

<div class="actions">
<input type="submit" value="save changes" class="btn primary large" />
</div>

</form>

{% endblock content %}
