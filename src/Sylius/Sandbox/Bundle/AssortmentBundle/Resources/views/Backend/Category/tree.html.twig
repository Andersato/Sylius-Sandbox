{% for category in category.children %}
    <tr>
        <td>{{ category.id }}</td>
        <td>{% for i in 0..category.treeLevel %}&#8212;{% endfor %} - {{ category.name }}</td>
        <td>
            <div class="pull-right">
            {% if loop.first %}
            <a class="btn success disabled">&uarr;</a>
            {% else %}
            <a href="{{ path('sylius_categorizer_backend_category_move_up', {'alias': catalog.alias, 'id': category.id}) }}" class="btn success">&uarr;</a>
            {% endif %}

            {% if loop.last %}
            <a class="btn danger disabled">&darr;</a>
            {% else %}
            <a href="{{ path('sylius_categorizer_backend_category_move_down', {'alias': catalog.alias, 'id': category.id}) }}" class="btn danger">&darr;</a>
            {% endif %}
            <a href="{{ path('sylius_categorizer_backend_category_show', {'alias': catalog.alias, 'id': category.id}) }}" class="btn">list products</a>
            <a href="{{ path('sylius_categorizer_backend_category_update', {'alias': catalog.alias, 'id': category.id}) }}" class="btn">update</a>
            <a href="{{ path('sylius_categorizer_backend_category_delete', {'alias': catalog.alias, 'id': category.id}) }}" class="btn danger confirmer"
                data-controls-modal="confirmer-modal"
                data-backdrop="static"
                data-confirmer-question="Are you sure you want to delete this category?"
            >delete</a>
            </div>
        </td>
    </tr>

    {% if category.hasChildren() %}
        {% include 'SandboxAssortmentBundle:Backend/Category:tree.html.twig' %}
    {% endif %}
{% endfor %}
