{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Creating category.<small> Use the form below to create a new assortment category...</small></h1>
</div>

<form action="{{ path('sylius_categorizer_backend_category_create', {'alias': catalog.alias}) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span7'}}) }}
    {{ form_row(form.parent, {'empty_value': "choose category..."}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
    <input type="submit" value="create category" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
