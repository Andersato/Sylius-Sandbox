{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Updating post.<small> Use this form to modify existing post...</small></h1>
</div>

<form action="{{ path('sylius_blogger_backend_post_update', {'id': post.id}) }}" method="post" class="form-horizontal">
<fieldset>
    <div class="control-group">
    {{ form_label(form.title, 'Title...') }}
    <div class="controls">
        {{ form_widget(form.title, {'attr': {'class': 'span7'}}) }}
    </div>
    </div>
    <div class="control-group">
    {{ form_label(form.author, 'Author...') }}
    <div class="controls">
        {{ form_widget(form.author, {'attr': {'class': 'span4'}}) }}
    </div>
    </div>
    <div class="control-group">
    {{ form_label(form.content, 'Content...') }}
    <div class="controls">
        {{ form_widget(form.content, {'attr': {'class': 'span9', 'rows': 10}}) }}
    </div>
    </div>
    <div class="control-group">
    {{ form_label(form.published, 'Publish?') }}
    <div class="controls">
        {{ form_widget(form.published) }}
    </div>
    </div>
    <div class="control-group">
    {{ form_label(form.categories, 'Categories...', {'attr': {'class': 'span3'}}) }}
    <div class="controls">
        {{ form_widget(form.categories) }}
    </div>
    </div>
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
    <input type="submit" class="btn btn-large btn-primary" value="save changes">
    </div>
</form>
{% endblock %}
