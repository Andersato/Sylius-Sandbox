{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Group details.</h1>
</div>

<div class="well">
<a href="{{ path('sylius_guard_backend_group_update', {'id': group.id}) }}" class="btn">
    <i class="icon-pencil"></i> update
</a>
<a href="{{ path('sylius_guard_backend_group_delete', {'id': group.id}) }}" class="btn btn-danger confirmer"
    data-toggle="modal"
    data-target="confirmer-modal"
    data-confirmer-question="Are you sure you want to delete this group?"
>
    <i class="icon-remove icon-white"></i> delete
</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>#id</th>
            <th>name</th>
            <th>roles</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ group.id }}</td>
            <td>{{ group.name }}</td>
            <td>{{ group.roles|join(', ') }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}
