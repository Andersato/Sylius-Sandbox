{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Groups list.</h1>
</div>

<div class="well">
<a href="{{ path('sylius_guard_backend_group_create') }}" class="btn primary large">create group</a>
</div>

{% if groups %}
<table class="zebra-stripped">
    <thead>
        <tr>
            <th>#id</th>
            <th>name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
        <tr>
            <td>{{ group.id }}</td>
            <td>{{ group.name }}</td>
            <td>
                <div class="pull-right">
                <a href="{{ path('sylius_guard_backend_group_show', {'id': group.id}) }}" class="btn">details</a>
                <a href="{{ path('sylius_guard_backend_group_update', {'id': group.id}) }}" class="btn">update</a>
                <a href="{{ path('sylius_guard_backend_group_delete', {'id': group.id}) }}" class="btn danger confirmer"
                    data-controls-modal="confirmer-modal"
                    data-backdrop="static"
                    data-confirmer-question="Are you sure you want to delete this group?"
                >delete</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert-message info">
  <p><strong>Information.</strong> There are no groups to display.</p>
</div>
{% endif %}

{% endblock %}
