{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>{{ "header.group.list" | trans({}, 'SyliusGuardBundle') }}</h1>
</div>

<div class="well">
<a href="{{ path('sylius_guard_backend_group_create') }}" class="btn primary large">{{ "group.create" | trans({}, 'SyliusGuardBundle') | lower }}</a>
</div>

{% if groups %}
<table class="zebra-stripped">
    <thead>
        <tr>
            <th>#id</th>
            <th>{{ "label.group.name" | trans({}, 'SyliusGuardBundle') | lower }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
        <tr>
            <td>{{ group.id }}</td>
            <td>{{ group.name }}</td>
            <td>
                <div class="pull-right">
                <a href="{{ path('sylius_guard_backend_group_show', {'id': group.id}) }}" class="btn">{{ "show" | trans({}, 'SyliusGuardBundle') }}</a>
                <a href="{{ path('sylius_guard_backend_group_update', {'id': group.id}) }}" class="btn">{{ "update" | trans({}, 'SyliusGuardBundle') }}</a>
                <a href="{{ path('sylius_guard_backend_group_delete', {'id': group.id}) }}" class="btn danger">{{ "delete" | trans({}, 'SyliusGuardBundle') }}</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert-message info">
    <p>{{ "list.group.empty" | trans({}, 'SyliusGuardBundle') }}</p>
</div>
{% endif %}

{% endblock %}
