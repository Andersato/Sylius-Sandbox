{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ "header.group.update" | trans({}, 'SyliusGuardBundle') }}</h1>
</div>

<form action="{{ path('sylius_guard_backend_group_update', {'id': group.id}) }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_errors(form.name) }}
    <div class="control-group">
    {{ form_label(form.name, "label.group.name" | trans({}, 'SyliusGuardBundle')) }}
    <div class="controls">
        {{ form_widget(form.name, {'attr': {'class': 'span4'}}) }}
    </div>
    </div>
    {{ form_errors(form.roles) }}
    <div class="control-group">
    {{ form_label(form.roles, "label.group.roles" | trans({}, 'SyliusGuardBundle')) }}
    <div class="controls">
        {{ form_widget(form.roles, {'attr': {'class': 'span5'}}) }}
    </div>
    </div>
</fieldset>
    {{ form_rest(form) }}
<div class="form-actions">
    <input type="submit" value="{{ "save" | trans({}, 'SyliusGuardBundle') }}" class="btn btn-primary btn-large" />
</div>
</form>
{% endblock %}
