parameters:
    database.driver:   {{ parameters.databaseDriver }}
    database.host:     {{ parameters.databaseHost }}
    database.port:     {{ parameters.databasePort|default('~') }}
    database.name:     {{ parameters.databaseName }}
    database.user:     {{ parameters.databaseUser }}
    database.password: {{ parameters.databasePassword }}
    
    mailer.transport:  {{ parameters.mailerTransport }}
    mailer.host:       {{ parameters.mailerHost }}
    mailer.user:       {{ parameters.mailerUser }}
    mailer.password:   {{ parameters.mailerPassword }}
    
    locale: en
    
    secret: {{ parameters.secret }}
