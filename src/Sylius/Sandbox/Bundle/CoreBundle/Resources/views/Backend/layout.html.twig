                                <li><a href="{{ path('sylius_addressing_backend_address_list') }}"><i class="icon-list-alt"></i> List adresses</a></li>
                            <li class="nav-header">{{ "sidebar.menu.guard" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_guard_backend_user_create') }}"><i class="icon-plus-sign"></i> Create user</a></li>
                                <li><a href="{{ path('sylius_guard_backend_user_list') }}"><i class="icon-user"></i> List users</a></li>
                                <li><a href="{{ path('sylius_guard_backend_group_create') }}"><i class="icon-plus-sign"></i> Create group</a></li>
                                <li><a href="{{ path('sylius_guard_backend_group_list') }}"><i class="icon-list-alt"></i> List group</a></li>
                            <li class="nav-header">{{ "sidebar.menu.customization" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_theming_backend_theme_list') }}"><i class="icon-th"></i> Themes manager</a></li>
                                <li><a href="{{ path('sylius_plugins_backend_plugin_list') }}"><i class="icon-th-large"></i> Plugins manager</a></li>
                            <li class="nav-header">{{ "sidebar.menu.administration" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_guard_security_logout') }}" class="last"><i class="icon-off"></i> Logout...</a></li>
                        </ul>
                    {% endblock %}
                    </div>
                </div>
                <div id="content" class="span10">
                    <div id="content-inner">
                    {% block content %}   {% endblock %}
                    </div>
                    <hr>
                    <footer>
                        <p>&copy; <a href="http://Sylius.org">Sylius.org</a>, 2011 - 2012.</p>
                    </footer>
                </div>
            </div>
        </div>
