                                <li><a href="{{ path('sylius_addressing_backend_address_list') }}">Addresses list</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ "menu.guard" | trans({}, 'SandboxCoreBundle') }} <b class="caret"></b></a>
