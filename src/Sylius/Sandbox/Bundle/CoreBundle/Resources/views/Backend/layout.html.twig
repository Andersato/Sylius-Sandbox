                            <li><a href="{{ path('sylius_blogger_backend_post_list') }}">List posts</a></li>
                        </ul>
                        </li>
                        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ "menu.newsletter" | trans({}, 'SandboxCoreBundle') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
