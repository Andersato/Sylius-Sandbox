<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
	
	<class name="Sylius\Sandbox\Bundle\AddressingBundle\Entity\Address">
		
		<property name="name">
            <constraint name="NotBlank">
                <option name="message">Proszę wpisać imię</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">Imię musi mieć przynajmniej długość dwóch znaków</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">Imię jest zbyt długie</option>
            </constraint>
        </property>
        
        <property name="surname">
            <constraint name="NotBlank">
                <option name="message">Proszę wpisać nazwisko</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">Nazwisko musi mieć przynajmniej długość dwóch znaków</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">Nazwisko jest zbyt długie</option>
            </constraint>
        </property>
        
        <property name="street">
            <constraint name="NotBlank">
                <option name="message">Proszę wpisać adres</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">Adres musi mieć przynajmniej długość dwóch znaków</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">Adres jest zbyt długi</option>
            </constraint>
        </property>
        
        <property name="postcode">
            <constraint name="NotBlank">
                <option name="message">Proszę wpisać kod pocztowy</option>
            </constraint>
            <constraint name="Regex">
            	<option name="pattern">/^[0-9]{2}\-[0-9]{3}$/</option>
                <option name="message">Proszę wpisać poprawny kod pocztowy</option>
            </constraint>
        </property>
        
        <property name="city">
            <constraint name="NotBlank">
                <option name="message">Proszę wpisać miejscowość</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">Nazwa miejscowości musi mieć przynajmniej długość dwóch znaków</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">Nazwa miejscowości jest zbyt długa</option>
            </constraint>
        </property>
        
        <property name="email">
            <constraint name="NotBlank">
                <option name="message">Proszę podać adres email</option>
            </constraint>
            <constraint name="Email">
                <option name="message">Proszę podać prawidłowy adres email</option>
            </constraint>
        </property>
		
	</class>

</constraint-mapping>
