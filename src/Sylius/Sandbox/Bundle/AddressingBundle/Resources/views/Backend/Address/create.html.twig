{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Creating address. <small>Use this form to add new address.</small></h1>
</div>

<form action="{{ path('sylius_addressing_backend_address_create') }}" method="post" class="form-horizontal">
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.surname, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.street, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.city, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.postcode, {'attr': {'class': 'span2'}}) }}
    {{ form_row(form.email, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.phone, {'attr': {'class': 'span4'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="create address" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
