{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Szczegóły adresu.</h1>
</div>

<div class="well">
<a href="{{ path('sylius_addressing_backend_address_update', {'id': address.id}) }}" class="btn">edytuj</a>
<a href="{{ path('sylius_addressing_backend_address_delete', {'id': address.id}) }}"  class="btn danger confirmer" 
    data-controls-modal="confirmer-modal"
    data-backdrop="static"
    data-confirmer-question="Czy na pewno chcesz usunąć adres klienta <strong>{{ address.name }} {{ address.surname }}</strong>?"
>usuń</a>

</div>

<table class="bordered-table">
    <thead>
        <tr>
            <th>#id</th>
            <th>imię</th>
            <th>nazwisko</th>
            <th>miejscowość</th>
            <th>ulica</th>
            <th>kod pocztowy</th>
            <th>e-mail</th>
            <th>telefon kontaktowy</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ address.id }}</td>
            <td>{{ address.name }}</td>
            <td>{{ address.surname }}</td>
            <td>{{ address.city }}</td>
            <td>{{ address.street }}</td>
            <td>{{ address.postcode }}</td>
            <td><a href="mailto:{{ address.email }}">{{ address.email }}</a></td>
            <td>{{ address.phone|default('Brak podanego numeru.') }}</td>
        </tr>
    </tbody>
</table>

{% endblock %}
