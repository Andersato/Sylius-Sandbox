{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Książka adresowa. <small>Wszystkie adresy zarejestrowane w systemie.</small></h1>
</div>

<div class="well">
<a href="{{ path('sylius_addressing_backend_address_create') }}" class="btn primary large">stwórz adres</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "poprzednia strona...", 'next_message': "następna strona..."}) }}
{% endif %}

{% if addresses %}
<table class="zebra-stripped">
    <thead>
        <tr>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'id', 'order': sorter.order}) }}">#id</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'name', 'order': sorter.order}) }}">imię</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'surname', 'order': sorter.order}) }}">nazwisko</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'city', 'order': sorter.order}) }}">miejscowość</a></th>
            <th>ulica</th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'postcode', 'order': sorter.order}) }}">kod pocztowy</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'email', 'order': sorter.order}) }}">adres e-mail</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for address in addresses %}
        <tr>
            <td>{{ address.id }}</td>
            <td>{{ address.name }}</td>
            <td>{{ address.surname }}</td>
            <td>{{ address.city }}</td>
            <td>{{ address.street }}</td>
            <td>{{ address.postcode }}</td>
            <td><a href="mailto:{{ address.email }}">{{ address.email }}</a></td>
            <td>
                <div class="pull-right">
                <a href="{{ path('sylius_addressing_backend_address_show', {'id': address.id}) }}" class="btn">szczegóły</a>
                <a href="{{ path('sylius_addressing_backend_address_update', {'id': address.id}) }}" class="btn">edytuj</a>
                <a href="{{ path('sylius_addressing_backend_address_delete', {'id': address.id}) }}" class="btn danger confirmer" 
                    data-controls-modal="confirmer-modal"
                    data-backdrop="static"
                    data-confirmer-question="Czy na pewno chcesz usunąć adres klienta <strong>{{ address.name }} {{ address.surname }}</strong>?"
                >usuń</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert-message info">
  <p><strong>Informacja.</strong> Brak adresów.</p>
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "poprzednia strona...", 'next_message': "następna strona..."}) }}
{% endif %}

{% endblock %}
